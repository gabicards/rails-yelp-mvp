<div class="container mt-5">
  <div class="d-flex justify-content-center">
    <div class="card" style="width:500px">
      <div class="card-header">
        <h1>New review</h1>
      </div>
      <div class="card-body">
        <%= simple_form_for [@restaurant, @review] do |f| %>
          <%= f.input :content %>
          <%= f.input :rating %>
          <%= f.submit "Submit review", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
