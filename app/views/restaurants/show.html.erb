<div class="container mt-5">
  <div class="d-flex justify-content-center">
    <div class="card" style="width:500px">
      <div class="card-header">
        <h2><%= @restaurant.name %></h2>
      </div>
      <div class="card-body">
        <p><%= @restaurant.address %></p>

        <p><strong>Reviews</strong></p>
        <ul class="list-group">
          <% @restaurant.reviews.each do |review| %>
            <li class="list-group-item">
              <%= review.content %>
              <%= link_to "Delete",
              review_path(review),
              data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'btn btn-danger btn-sm' %>
              </li>
          <% end %>
        </ul>
        <%= link_to "Home", restaurants_path, class: "btn btn-primary mt-3" %>
        <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: 'btn btn-primary mt-3'  %>
        <br>
        </div>
      </div>
  </div>
</div>
